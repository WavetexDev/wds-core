{
	"compilerOptions": {
		"target": "ES6",
		"lib": [
			"DOM",
			"ES6",
			"DOM.Iterable",
			"ScriptHost",
			"ES2016.Array.Include",
			"ESNext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react",
		"incremental": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": [
		"src/*.ts",
		"src/*.tsx",
		"src/**/*.tsx",
		"src/**/*.ts"
	],
	"exclude": ["node_modules"]
}
